<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="himankgupta.bustrackingsystem.MainActivity">

    <Button
        android:id="@+id/bt_bus_status"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time"
        android:layout_marginTop="39dp"
        android:background="@android:color/background_dark"
        android:fontFamily="serif"
        android:onClick="bus_status"
        android:text="BUS STATUS"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_bus_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_bus_status"
        android:layout_marginTop="12dp"
        android:background="@android:color/background_dark"
        android:fontFamily="serif"
        android:onClick="bus_info"
        android:text="BUS INFORMATION"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_route_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bt_bus_info"
        android:layout_marginTop="59dp"
        android:background="@android:color/background_dark"
        android:fontFamily="serif"
        android:onClick="route_info"
        android:text="ROUTE INFORMATION"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:fontFamily="casual"
        android:text="Welcome To"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:typeface="normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="100dp"
        android:text="Date" />

    <TextView
        android:id="@+id/time"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/date"
        android:layout_marginTop="11dp"
        android:text="Time" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>
