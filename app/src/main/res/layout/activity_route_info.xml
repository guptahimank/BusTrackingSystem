<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="himankgupta.bustrackingsystem.route_info">


    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_x="10dp"
        android:layout_y="75dp"
        android:fontFamily="serif"
        android:text="SOURCE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_x="10dp"
        android:layout_y="150dp"
        android:fontFamily="serif"
        android:text="DESTINATION"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="47dp" />

    <Spinner
        android:id="@+id/sspinner"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_x="200dp"
        android:layout_y="75dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="93dp" />

    <Spinner
        android:id="@+id/dspinner"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginBottom="67dp"
        android:layout_x="200dp"
        android:layout_y="150dp"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="93dp" />

    <Button
        android:id="@+id/btsubmitrouteinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_x="0dp"
        android:layout_y="230dp"
        android:background="@android:color/background_dark"
        android:fontFamily="serif"
        android:onClick="route_info_details"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="142dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:layout_x="140dp"
        android:layout_y="357dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="334dp" />


</AbsoluteLayout>
